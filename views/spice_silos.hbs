    <a href="/harvesters" class="nav-button">Harvesters</a>
  </nav>
  <section>
    <h2>Existing Spice Silos</h2>
    <table border="1">
      <thead>
        <tr>
          <th>Silo ID</th>
          <th>City</th>
          <th>Spice Capacity</th>
          <th>Spice Quantity</th>
          <th>Last Inspection Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Arrakeen</td>
          <td>150</td>
          <td>150</td>
          <td>0189-04-01</td>
          <td>
            <button onclick="editRecord('silo', 1)">Edit</button>
            <button onclick="deleteRecord('silo', 1)">Delete</button>
          </td>
        </tr>
        <tr>
          <td>2</td>
          <td>Carthag</td>
          <td>200</td>
          <td>200</td>
          <td>0189-01-02</td>
          <td>
            <button onclick="editRecord('silo', 2)">Edit</button>
            <button onclick="deleteRecord('silo', 2)">Delete</button>
          </td>
        </tr>
        <tr>
          <td>3</td>
          <td>Arrakeen</td>
          <td>150</td>
          <td>150</td>
          <td>0189-04-03</td>
          <td>
            <button onclick="editRecord('silo', 3)">Edit</button>
            <button onclick="deleteRecord('silo', 3)">Delete</button>
          </td>
        </tr>
        <tr>
          <td>4</td>
          <td>Arrakeen</td>
          <td>150</td>
